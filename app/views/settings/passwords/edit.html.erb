<%= content_for :page_title, "Change Password" %>

<%= settings_section title: "Change Password", subtitle: "Update your password to keep your account secure" do %>
  <%= styled_form_with model: @user, url: settings_password_path, method: :patch, class: "space-y-6" do |form| %>
    <div class="space-y-4">
      <%= form.password_field :current_password, 
            placeholder: "Enter your current password",
            label: "Current Password",
            required: true,
            autocomplete: "current-password" %>

      <%= form.password_field :password,
            placeholder: "Enter your new password (minimum 8 characters)",
            label: "New Password",
            required: true,
            autocomplete: "new-password" %>

      <%= form.password_field :password_confirmation,
            placeholder: "Confirm your new password",
            label: "Confirm New Password",
            required: true,
            autocomplete: "new-password" %>
    </div>

    <div class="flex items-center justify-between gap-4 pt-2">
      <%= link_to settings_profile_path, class: "text-secondary hover:text-primary text-sm font-medium" do %>
        Cancel
      <% end %>
      
      <%= render DS::Button.new(text: "Update Password", class: "md:w-auto w-full justify-center") %>
    </div>

    <div class="bg-surface-inset rounded-lg p-4 mt-4">
      <h4 class="text-sm font-medium text-primary mb-2">Password Requirements:</h4>
      <ul class="text-sm text-secondary space-y-1">
        <li class="flex items-center gap-2">
          <%= icon "check", class: "w-4 h-4" %>
          Minimum 8 characters
        </li>
      </ul>
    </div>
  <% end %>
<% end %>

<%= settings_section title: "Forgot Your Current Password?", subtitle: "If you can't remember your current password, you can reset it instead" do %>
  <div class="flex items-center gap-4">
    <div class="flex-1">
      <p class="text-sm text-secondary">
        You'll receive an email with instructions to reset your password.
      </p>
    </div>
    <%= render DS::Button.new(
      text: "Reset Password",
      variant: "secondary",
      href: new_password_reset_path,
      icon: "mail"
    ) %>
  </div>
<% end %>
