<div class="flex items-center gap-3 py-1">
  <% if combobox_service.logo_url.present? %>
    <%= image_tag(combobox_service.logo_url, class: "rounded-full h-8 w-8 shrink-0 object-cover", loading: "lazy") %>
  <% else %>
    <div class="h-8 w-8 rounded-full bg-container-inset flex items-center justify-center shrink-0">
      <span class="text-lg"><%= ServiceMerchant.new(subscription_category: combobox_service.category).category_icon %></span>
    </div>
  <% end %>
  <div class="flex flex-col min-w-0">
    <span class="text-sm font-medium text-primary truncate"><%= combobox_service.name %></span>
    <span class="text-xs text-secondary">
      <%= combobox_service.category&.humanize || "Other" %>
      <% if combobox_service.avg_monthly_cost.present? && combobox_service.avg_monthly_cost > 0 %>
        &middot; ~<%= number_to_currency(combobox_service.avg_monthly_cost) %>/mo
      <% end %>
    </span>
  </div>
</div>
