<div class="flex flex-col items-center justify-center h-full p-6 text-center">
  <div class="w-16 h-16 rounded-full bg-gradient-to-br from-indigo-500 to-violet-500 flex items-center justify-center mb-4">
    <%= icon("sparkles", size: "xl", color: "white") %>
  </div>
  
  <h3 class="text-lg font-semibold text-primary mb-2">Enable AI Assistant</h3>
  <p class="text-sm text-secondary mb-6 max-w-sm">
    Get personalized financial insights, spending analysis, and answers to your money questions.
  </p>

  <%= form_with url: user_path(Current.user), method: :patch, class: "w-full max-w-xs" do |f| %>
    <%= f.hidden_field :ai_enabled, value: true %>
    
    <%= render DS::Button.new(
      text: "Enable AI Assistant",
      icon: "sparkles",
      type: "submit",
      class: "w-full"
    ) %>
  <% end %>

  <p class="text-xs text-subdued mt-4">
    By enabling, you agree to share your financial data with our AI service.
  </p>
</div>
