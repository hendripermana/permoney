<%= turbo_frame_tag "floating_chat_content" do %>
  <div class="flex flex-col h-full min-h-0" data-controller="chat">
    <%= turbo_stream_from @chat %>

    <%# Messages Area %>
    <div class="flex-1 overflow-y-auto px-4 py-3 space-y-4 scroll-smooth" data-chat-target="messages">
      <% if @chat.conversation_messages.any? %>
        <% @chat.conversation_messages.ordered.each do |message| %>
          <%= render message %>
        <% end %>
      <% else %>
        <%= render "chats/ai_greeting" %>
      <% end %>

      <% if params[:thinking].present? %>
        <%= render "chats/thinking_indicator", chat: @chat %>
      <% end %>

      <% if @chat.error.present? && @chat.needs_assistant_response? %>
        <%= render "chats/error", chat: @chat, floating: true %>
      <% end %>
    </div>

    <%# Chat Form %>
    <div class="shrink-0 border-t border-primary bg-container">
      <%= render "messages/chat_form", chat: @chat, floating: true, message: @message %>
    </div>
  </div>
<% end %>
