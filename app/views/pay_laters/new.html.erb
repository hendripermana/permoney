<% if params[:step] == "method_select" %>
  <%= render "accounts/new/method_selector",
             path: new_pay_later_path,
             show_us_link: false,
             show_eu_link: false,
             accountable_type: "PayLater" %>
<% else %>
  <%= render layout: "accounts/new/container", locals: { title: t("accounts.new.title") } do %>
    <% @account ||= Current.family.accounts.build(currency: Current.family.currency, accountable: PayLater.new) %>
    <%= render "pay_laters/form", account: @account, url: pay_laters_path %>
  <% end %>
<% end %>

