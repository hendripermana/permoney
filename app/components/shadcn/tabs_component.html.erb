<div 
  data-controller="shadcn--tabs" 
  data-shadcn--tabs-default-value="<%= default_value %>"
  data-shadcn--tabs-url-param-value="<%= @url_param %>"
  class="<%= wrapper_classes %>"
>
  <!-- Tabs List (Triggers) -->
  <div 
    role="tablist" 
    aria-orientation="horizontal"
    class="inline-flex h-10 items-center justify-center rounded-md bg-surface-inset p-1 text-muted-foreground w-full"
    data-shadcn--tabs-target="tablist"
  >
    <% tabs.each do |tab| %>
      <button
        type="button"
        role="tab"
        aria-selected="<%= tab.active ? 'true' : 'false' %>"
        aria-controls="panel-<%= identifier %>-<%= tab.value %>"
        data-shadcn--tabs-target="trigger"
        data-tab-value="<%= tab.value %>"
        data-action="click->shadcn--tabs#selectTab"
        tabindex="<%= tab.active ? '0' : '-1' %>"
        class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 flex-1 gap-2 <%= tab.active ? 'bg-white theme-dark:bg-gray-700 text-primary shadow-sm' : 'text-secondary hover:bg-surface-inset-hover' %>"
      >
        <% if tab.icon %>
          <%= helpers.icon tab.icon, size: "sm" %>
        <% end %>
        <%= tab.label %>
      </button>
    <% end %>
  </div>

  <!-- Tabs Content (Panels) -->
  <% tabs.each do |tab| %>
    <div
      role="tabpanel"
      id="panel-<%= identifier %>-<%= tab.value %>"
      aria-labelledby="trigger-<%= identifier %>-<%= tab.value %>"
      data-shadcn--tabs-target="panel"
      data-tab-value="<%= tab.value %>"
      tabindex="0"
      class="mt-4 ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 <%= tab.active ? '' : 'hidden' %>"
    >
      <%= tab.call %>
    </div>
  <% end %>
</div>
